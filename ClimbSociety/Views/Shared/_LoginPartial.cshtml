@using Microsoft.AspNetCore.Identity
@using ClimbSociety.Areas.Identity.Data

@inject SignInManager<Climber> SignInManager
@inject UserManager<Climber> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item" style="align-self: center">
            <a id="manage" class="nav-link" style="color: azure;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0" style="color:azure !important">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link" id="register" style="color: azure;" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link" id="login" style="color: azure;" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
