@page
<div class="container">
    <div class="row p-1">
        <div class="col-1">Group</div>
        <div class="col-3"><input type="text" id="groupInput" /></div>
        <div class="col-2"><input type="button" id="joinButton" value="Join group" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">User</div>
        <div class="col-5"><input type="text" id="userInput" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">ConnectionId</div>
        <div class="col-5"><input type="text" id="connIdInput" /></div>
    </div>
    <div class="row p-1">
        <div class="col-1">Message</div>
        <div class="col-4"><input type="text" class="w-100" id="messageInput" /></div>
        <div class="col-5"><input type="button" id="sendButton" value="Send Message" /></div>
    </div>
    <div class="row p-1">
        <div class="col-2 text-end">
            
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <hr />
        </div>
    </div>
    <div class="row p-1">
        <div class="col-6">
            <ul id="messagesList"></ul>
        </div>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>
